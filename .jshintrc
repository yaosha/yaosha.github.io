{
    "sub": true, // true: Prohibit use of empty blocks
    "boss": true, // true: Require all defined variables be used
    "eqnull": true, // true: Requires all functions run in ES5 Strict Mode
    "node": true, //This option defines globals available when your code is running inside of the Node runtime environment.
    "browser": true, //This option defines globals exposed by modern browsers: all the way from good old document and navigator to the HTML5 FileReader and other new developments in the browser world
    "bitwise": true, //This option prohibits the use of bitwise operators such as ^ (XOR), | (OR) and others.
    "curly": true, // true: Require {} for every new block or scope
    "eqeqeq": true, // true: Require triple equals (===) for comparison
    "immed": true, // true: Require immediate invocations to be wrapped in parens e.g. `(function () { } ());`
    "latedef": false, // true: Require variables/functions to be defined before being used
    "newcap": true, // true: Require capitalization of all constructor functions e.g. `new F()`
    "noarg": true, // true: Prohibit use of `arguments.caller` and `arguments.callee`
    "undef": true, // true: Require all non-global variables to be declared (prevents global leaks)
    "unused": false, //This option warns when you define and never use your variables.'vars' only check for variables, not function parameters,'strict' to check all variables and parameters
    "strict": true, //This option requires the code to run in ECMAScript 5s strict mode.
    /*如下全局参数根据具体情况进行配置*/
    "globals": {
        "jQuery": true,
        "$": true
        /*"angular": true,*/
        /*"moment": true,*/
        /*"sha1": true,*/
        /*"_": true,*/
        /*"echarts": true*/
    },
    "predef": ["ActiveXObject"]
}
